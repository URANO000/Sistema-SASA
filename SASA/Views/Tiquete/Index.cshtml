<link rel="stylesheet" href="~/css/common.css" asp-append-version="true" />
<div class="container-fluid">

    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="mb-0">Gestión de Tiquetes</h2>
        <button class="btn btn-custom" data-bs-toggle="modal" data-bs-target="#addTicketModal">
            <i class="bi bi-plus-lg"></i>
            Nuevo Tiquete
        </button>
    </div>

    <!-- Filters -->
    <div class="card mb-3">
        <div class="card-body">
            <div class="row g-2 align-items-end">

                <div class="col-md-4">
                    <label class="form-label">Buscar</label>
                    <input type="text" class="form-control" placeholder="Código o asunto">
                </div>

                <div class="col-md-2">
                    <label class="form-label">Estado</label>
                    <select class="form-select">
                        <option value="">Todos</option>
                        <option>Abierto</option>
                        <option>En Progreso</option>
                        <option>Cerrado</option>
                    </select>
                </div>

                <div class="col-md-2">
                    <label class="form-label">Prioridad</label>
                    <select class="form-select">
                        <option value="">Todas</option>
                        <option>Alta</option>
                        <option>Media</option>
                        <option>Baja</option>
                    </select>
                </div>

                <div class="col-md-2">
                    <label class="form-label">Fecha</label>
                    <input type="date" class="form-control">
                </div>

                <div class="col-md-2">
                    <button class="btn btn-outline-secondary w-100">
                        <i class="bi bi-funnel"></i>
                        Filtrar
                    </button>
                </div>

            </div>
        </div>
    </div>

    <!-- Table -->
    <div class="table-responsive card">
        <table class="table table-hover align-middle table-custom">
            <thead class="">
                <tr>
                    <th>Acciones</th>
                    <th>Código</th>
                    <th>Descripción</th>
                    <th>Estado</th>
                    <th>Prioridad</th>
                    <th>Creado</th>
                    <th>Actualizado</th>
                </tr>
            </thead>
            <tbody>

                <tr>
                    <td>
                        <a class="btn btn-link icon-btn" asp-area="" asp-controller="Tiquete" asp-action="Details">
                            <i class="bi bi-eye detail-btn"></i>
                        </a>
                        <a class="btn btn-link icon-btn" asp-area="" asp-controller="Tiquete" asp-action="Edit">
                            <i class="fa-regular fa-pen-to-square edit-btn"></i>
                        </a>
                    </td>
                    <td>TQ-001</td>
                    <td>Error en acceso al sistema</td>
                    <td>
                        <span class="badge bg-warning text-white">En Progreso</span>
                    </td>
                    <td>
                        <span class="badge bg-danger">Alta</span>
                    </td>
                    <td>10/03/2025</td>
                    <td>12/03/2025</td>
                </tr>

                <tr>
                    <td>
                        <button class="btn btn-link">
                            <i class="bi bi-eye detail-btn"></i>
                        </button>
                        <button class="btn btn-link">
                            <i class="fa-regular fa-pen-to-square edit-btn"></i>
                        </button>
                    </td>
                    <td>TQ-002</td>
                    <td>Solicitud de equipo nuevo</td>
                    <td>
                        <span class="badge bg-success">Cerrado</span>
                    </td>
                    <td>
                        <span class="badge bg-secondary">Media</span>
                    </td>
                    <td>08/03/2025</td>
                    <td>09/03/2025</td>
                </tr>

            </tbody>
        </table>
    </div>

</div>


<!-- Specifically for the modal-->
@await Html.PartialAsync("_AddModal")
