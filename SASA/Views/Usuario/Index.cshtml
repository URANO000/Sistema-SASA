<link rel="stylesheet" href="~/css/common.css" asp-append-version="true" />
<div class="container-fluid">

    <!-- Header -->
    <div class="card mb-3">
        <div class="card-body">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h2 class="mb-0 fw-bold">Gestión de Usuarios</h2>
                <button class="btn btn-custom"
                        data-bs-toggle="modal" data-bs-target="#addUserModal">
                    <i class="bi bi-plus-lg"></i>
                    Nuevo Usuario
                </button>
            </div>
        </div>
    </div>

    <!-- Filters -->
    <div class="card mb-3">
        <div class="card-body">
            <div class="row g-2 align-items-end">

                <div class="col-md-4">
                    <label class="form-label">Buscar</label>
                    <input type="text" class="form-control" placeholder="Nombre o No. Empleado">
                </div>

                <div class="col-md-3">
                    <label class="form-label">Departamento</label>
                    <select class="form-select">
                        <option value="">Todos</option>
                        <option>TI</option>
                        <option>RRHH</option>
                        <option>Finanzas</option>
                    </select>
                </div>

                <div class="col-md-3">
                    <label class="form-label">Estado</label>
                    <select class="form-select">
                        <option value="">Todos</option>
                        <option>Activo</option>
                        <option>Inactivo</option>
                    </select>
                </div>

                <div class="col-md-2">
                    <button class="btn btn-outline-secondary w-100">
                        <i class="bi bi-funnel"></i>
                        Filtrar
                    </button>
                </div>

            </div>
        </div>
    </div>

    <!--Table comes here-->

    <div class="table-responsive card">
        <table class="table table-hover align-middle table-custom">
            <thead>
                <tr>
                    <th>Acciones</th>
                    <th>Usuario</th>
                    <th>No. Empleado</th>
                    <th>Correo</th>
                    <th>Departamento</th>
                    <th>Puesto</th>
                    <th>Estado</th>
                    <th>Rol</th>
                    <th>Tickets Abiertos</th>
                    <th>Último Ticket</th>
                </tr>
            </thead>
            <tbody>

                <tr>
                    <td>
                        <a class="btn btn-link icon-btn" asp-area="" asp-controller="Usuario" asp-action="Details">
                            <i class="bi bi-eye detail-btn"></i>
                        </a>
                        <a class="btn btn-link icon-btn" asp-area="" asp-controller="Usuario" asp-action="Edit">
                            <i class="fa-regular fa-pen-to-square edit-btn"></i>
                        </a>
                    </td>
                    <td>Juan Pérez</td>
                    <td>EMP-1023</td>
                    <td>juanp@gmail.com</td>
                    <td>TI</td>
                    <td>Analista de Soporte</td>
                    <td>
                        <span class="badge bg-success">Activo</span>
                    </td>
                    <td>Usuario</td>
                    <td>1</td>
                    <td>12/03/2025</td>
                </tr>

            </tbody>
        </table>
    </div>

</div>

