@{
    ViewData["Title"] = "Inventario";
}

<div class="container-fluid">

    <!-- Main Card -->
    <div class="card shadow-sm">
        <div class="card-body">

            <!-- Header -->
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h4 class="mb-0">Gestión de Inventario</h4>
                    <small class="text-muted">
                        Administre y supervise los activos registrados en el sistema.
                    </small>
                </div>
                <a asp-action="Create" class="btn btn-primary">
                    + Nuevo Activo
                </a>
            </div>

            <!-- Filters -->
            <div class="row mb-3">
                <div class="col-md-4">
                    <input type="text" class="form-control" placeholder="Buscar por nombre o código..." />
                </div>

                <div class="col-md-4">
                    <select class="form-select">
                        <option selected>Estado</option>
                        <option>Activo</option>
                        <option>En Mantenimiento</option>
                        <option>Fuera de Servicio</option>
                    </select>
                </div>

                <div class="col-md-4">
                    <select class="form-select">
                        <option selected>Tipo de Activo</option>
                        <option>Dispositivo</option>
                        <option>Herramienta</option>
                        <option>Otro</option>
                    </select>
                </div>
            </div>

            <!-- Table -->
            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>#</th>
                            <th>Código</th>
                            <th>Nombre</th>
                            <th>Tipo</th>
                            <th>Estado</th>
                            <th class="text-center">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>

                        <!-- Sample Row -->
                        <tr>
                            <td>1</td>
                            <td>INV-001</td>
                            <td>Dell Latitude Laptop</td>
                            <td>Dispositivo</td>
                            <td>
                                <span class="badge bg-success">Activo</span>
                            </td>
                            <td class="text-center">
                                <a asp-action="Detail" asp-route-id="1" class="btn btn-sm btn-outline-secondary me-1">
                                    Ver
                                </a>

                                <a asp-action="Edit" asp-route-id="1" class="btn btn-sm btn-outline-primary me-1">
                                    Editar
                                </a>

                                <button class="btn btn-sm btn-outline-danger">
                                    Eliminar
                                </button>
                            </td>
                        </tr>

                        <!-- Empty State Example -->
                        <!--
                        <tr>
                            <td colspan="6" class="text-center text-muted py-4">
                                No se encontraron activos registrados.
                            </td>
                        </tr>
                        -->

                    </tbody>
                </table>
            </div>

        </div>
    </div>
</div>