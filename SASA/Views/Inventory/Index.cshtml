@{
    ViewData["Title"] = "Inventario";
}

<div class="container-fluid">

    <!-- Main Card -->
    <div class="card mb-3">
        <div class="card-body">

            <!-- Header -->
            <div class="d-flex justify-content-between align-items-center mb-3">
                <div>
                    <h4 class="mb-0 fw-bold">Gestión de Inventario</h4>
                    <small class="text-muted">
                        Administre y supervise los activos registrados en el sistema.
                    </small>
                </div>
                <a class="btn btn-custom" asp-controller="Inventory" asp-action="Create">
                    <i class="bi bi-plus-lg"></i>
                    Nuevo Activo
                </a>
            </div>

            <!-- Filters -->
            <div class="row mb-3">
                <div class="col-md-4">
                    <input type="text" class="form-control" placeholder="Buscar por nombre o código..." />
                </div>

                <div class="col-md-4">
                    <select class="form-select">
                        <option selected>Estado</option>
                        <option>Activo</option>
                        <option>En Mantenimiento</option>
                        <option>Fuera de Servicio</option>
                    </select>
                </div>

                <div class="col-md-2">
                    <select class="form-select">
                        <option selected>Tipo de Activo</option>
                        <option>Dispositivo</option>
                        <option>Herramienta</option>
                        <option>Otro</option>
                    </select>
                </div>

                <div class="col-md-2">
                    <button class="btn btn-outline-secondary w-100">
                        <i class="bi bi-funnel"></i>
                        Filtrar
                    </button>
                </div>
            </div>

            <!-- Table -->
            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead class="table-light">
                        <tr>
                            <th class="text-center">Acciones</th>
                            <th>#</th>
                            <th>Código</th>
                            <th>Nombre</th>
                            <th>Tipo</th>
                            <th>Estado</th>
                        </tr>
                    </thead>
                    <tbody>

                        <!-- Sample Row -->
                        <tr>
                            <td class="text-center">
                                <a asp-action="Detail" asp-route-id="1" class="btn btn-link">
                                    <i class="bi bi-eye detail-btn"></i>
                                </a>

                                <a asp-action="Edit" asp-route-id="1" class="btn btn-link">
                                    <i class="fa-regular fa-pen-to-square edit-btn"></i>
                                </a>

                                <a class="btn btn-link text-danger">
                                    <i class="bi bi-trash3"></i>
                                </a>
                            </td>
                            <td>1</td>
                            <td>INV-001</td>
                            <td>Dell Latitude Laptop</td>
                            <td>Dispositivo</td>
                            <td>
                                <span class="badge bg-success">Activo</span>
                            </td>
                        </tr>

                        <!-- Empty State Example -->
                        <!--
                        <tr>
                            <td colspan="6" class="text-center text-muted py-4">
                                No se encontraron activos registrados.
                            </td>
                        </tr>
                        -->

                    </tbody>
                </table>
            </div>

        </div>
    </div>
</div>