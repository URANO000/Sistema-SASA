@{
    ViewData["Title"] = "Reportes de Inventario";
}

<div class="card sasa-card">
    <div class="card-body">

        <h4 class="mb-2">Reportes de Inventario</h4>
        <p class="text-muted">
            Genere reportes relacionados con el estado y uso de los activos.
        </p>

        <div class="row">
            <div class="col-md-4 mb-3">
                <button class="btn btn-custom w-100">
                    <i class="bi bi-file-earmark-text me-1"></i> Reporte General
                </button>
            </div>

            <div class="col-md-4 mb-3">
                <button class="btn btn-custom w-100">
                    <i class="bi bi-tools me-1"></i> Reporte de Mantenimiento
                </button>
            </div>

            <div class="col-md-4 mb-3">
                <button class="btn btn-custom w-100">
                    <i class="bi bi-pie-chart me-1"></i> Reporte por Estado
                </button>
            </div>
        </div>

    </div>
</div>
