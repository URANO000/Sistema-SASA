@{
    ViewData["Title"] = "Historial de Mantenimiento";
}

<div class="card">
    <div class="card-body">

        <div class="d-flex justify-content-between align-items-center mb-3">
            <div>
                <h4 class="mb-1 fw-bold">Historial y Mantenimiento</h4>
                <p class="text-muted mb-0">
                    Registro de mantenimientos y reparaciones realizadas a los activos.
                </p>
            </div>

            <a asp-action="CreateMaintenance" class="btn btn-custom">
                <i class="bi bi-plus-lg"></i>
                Registrar Mantenimiento
            </a>

        </div>

        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th>Activo</th>
                        <th>Fecha</th>
                        <th>Tipo</th>
                        <th>Estado</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>INV-001</td>
                        <td>15/03/2025</td>
                        <td>Preventivo</td>
                        <td><span class="badge bg-info">Finalizado</span></td>
                    </tr>
                </tbody>
            </table>
        </div>

    </div>
</div>