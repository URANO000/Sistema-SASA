@{
    ViewData["Title"] = "Reporte por Estado";
}

<div class="container-fluid">
    <div class="card shadow-sm">
        <div class="card-body">

            <h4 class="fw-bold mb-1">Reporte por Estado</h4>
            <p class="text-muted mb-4">
                Distribución de los activos según su estado actual.
            </p>

            <div class="row">
                <div class="col-md-6">
                    <ul class="list-group">
                        <li class="list-group-item d-flex justify-content-between">
                            Activos Activos
                            <span class="badge bg-success">98</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between">
                            En Mantenimiento
                            <span class="badge bg-warning">27</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between">
                            Inactivos
                            <span class="badge bg-secondary">12</span>
                        </li>
                    </ul>
                </div>
            </div>

            <div class="d-flex justify-content-end mt-3">
                <a asp-action="Reports" class="btn btn-outline-secondary">
                    Volver
                </a>
            </div>

        </div>
    </div>
</div>
