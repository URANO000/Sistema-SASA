@{
    ViewData["Title"] = "Nuevo Equipo";
}

<div class="container-fluid">
    <div class="card shadow-sm">
        <div class="card-body">

            <h4 class="mb-1 fw-bold">Registrar Nuevo Equipo</h4>
            <p class="text-muted mb-4">
                Complete la informaci칩n para registrar un nuevo equipo dentro del inventario.
            </p>

            <form asp-controller="Inventory" asp-action="Equipment">

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label">C칩digo del Equipo</label>
                        <input type="text" class="form-control" placeholder="EQ-002">
                    </div>

                    <div class="col-md-6 mb-3">
                        <label class="form-label">Nombre del Equipo</label>
                        <input type="text" class="form-control" placeholder="Laptop HP ProBook">
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Tipo de Equipo</label>
                        <select class="form-select">
                            <option selected disabled>Seleccione un tipo</option>
                            <option>Hardware</option>
                            <option>Software</option>
                            <option>Red</option>
                        </select>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label class="form-label">Estado</label>
                        <select class="form-select">
                            <option selected>Activo</option>
                            <option>En mantenimiento</option>
                            <option>Inactivo</option>
                        </select>
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label">Descripci칩n</label>
                    <textarea class="form-control" rows="3"
                        placeholder="Equipo asignado al 치rea administrativa"></textarea>
                </div>

                <div class="d-flex justify-content-end">
                    <a asp-action="Equipment" class="btn btn-outline-secondary me-2">
                        Cancelar
                    </a>

                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-check-circle me-1"></i>
                        Guardar Equipo
                    </button>
                </div>

            </form>

        </div>
    </div>
</div>
