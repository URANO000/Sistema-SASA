@{
    ViewData["Title"] = "Detalle de notificación";
    var id = (int)(ViewBag.Id ?? 0);
}

<div class="sasa-card">

    <div class="d-flex justify-content-between align-items-start gap-3">
        <div>
            <h2 class="mb-1">Detalle de notificación</h2>
            <div class="text-muted small">Notificación relacionada (ID: @id)</div>
        </div>

        <a asp-controller="Notificaciones" asp-action="Index" class="btn btn-outline-primary btn-sm">
            <i class="bi bi-arrow-left me-1"></i> Volver
        </a>
    </div>

    <hr />

    <div class="notif-detail">
        <div class="notif-detail-row">
            <span class="label">Tipo</span>
            <span class="value">Actualización / Comentario / Recordatorio</span>
        </div>

        <div class="notif-detail-row">
            <span class="label">Fecha y hora</span>
            <span class="value">14/12/2025 08:10</span>
        </div>

        <div class="notif-detail-row">
            <span class="label">Mensaje</span>
            <span class="value">Se registró un avance asociado a un elemento relacionado (tiquete).</span>
        </div>

        <div class="notif-detail-row">
            <span class="label">Relacionado con</span>
            <span class="value">
                <span class="badge bg-primary">Tiquete</span> #@id
            </span>
        </div>
    </div>

    <div class="mt-3 d-flex gap-2">
        <a asp-controller="Tiquetes" asp-action="Index" class="btn btn-primary">
            <i class="bi bi-ticket-perforated me-1"></i> Ir a Tiquetes
        </a>

        <button class="btn btn-outline-secondary" type="button" disabled>
            <i class="bi bi-eye me-1"></i> Marcar como vista
        </button>
    </div>

</div>
