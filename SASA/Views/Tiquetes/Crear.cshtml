@{
    ViewData["Title"] = "Crear Tiquete";
}

<div class="sasa-card">
    <h2>Nuevo Tiquete</h2>

    <form>
        <div class="mb-3">
            <label class="form-label">Título</label>
            <input class="form-control is-invalid" />
            <div class="invalid-feedback">Campo obligatorio.</div>
        </div>

        <div class="mb-3">
            <label class="form-label">Descripción</label>
            <textarea class="form-control is-valid"></textarea>
            <div class="valid-feedback">Correcto.</div>
        </div>

        <div class="d-flex gap-2">
            <button class="btn btn-primary" disabled>Guardar</button>
            <a asp-controller="Tiquetes" asp-action="Index" class="btn btn-outline-light">Volver</a>
        </div>
    </form>
</div>
