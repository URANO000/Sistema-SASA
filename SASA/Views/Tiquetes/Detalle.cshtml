@{
    ViewData["Title"] = "Detalle de Tiquete";
    var ticketId = 105;
}

<div class="sasa-card">

    <div class="d-flex justify-content-between align-items-start gap-3">
        <div>
            <h2 class="mb-1">Tiquete #@ticketId</h2>
            <div class="text-muted small">Detalle.</div>
        </div>

        <div class="d-flex gap-2">
            <a asp-controller="Tiquetes" asp-action="Index" class="btn btn-outline-primary btn-sm">
                <i class="bi bi-arrow-left me-1"></i> Volver
            </a>

            <button class="btn btn-outline-secondary btn-sm"
                    type="button"
                    data-bs-toggle="modal"
                    data-bs-target="#silenceModal">
                <i class="bi bi-bell-slash me-1"></i> Silenciar
            </button>
        </div>
    </div>

    <hr />

    <div class="row g-3">
        <div class="col-md-8">
            <div class="ticket-block">
                <div class="ticket-row"><span class="label">Título</span><span class="value">Solicitud de soporte</span></div>
                <div class="ticket-row"><span class="label">Estado</span><span class="value"><span class="badge bg-success">Abierto</span></span></div>
                <div class="ticket-row"><span class="label">Prioridad</span><span class="value">Media</span></div>
                <div class="ticket-row"><span class="label">Descripción</span><span class="value">Descripción del tiquete.</span></div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="silence-card" id="silenceCard" data-ticket-id="@ticketId">
                <div class="d-flex align-items-start justify-content-between gap-2">
                    <div>
                        <div class="fw-semibold">Notificaciones</div>
                        <div class="small text-muted" id="silenceStatus">Activas</div>
                    </div>

                    <div class="silence-badge active" id="silenceBadge">
                        <i class="bi bi-bell"></i>
                    </div>
                </div>

                <div class="small text-muted mt-2" id="silenceUntil">Sin silencio configurado.</div>

                <button class="btn btn-outline-danger btn-sm mt-3 w-100 d-none" type="button" id="btnUnsilence">
                    <i class="bi bi-bell me-1"></i> Reactivar notificaciones
                </button>
            </div>
        </div>
    </div>

</div>

<div class="modal fade" id="silenceModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Silenciar notificaciones</h5>
                <button class="btn-close" data-bs-dismiss="modal"></button>
            </div>

            <div class="modal-body">
                <p class="mb-3 text-muted">
                    Selecciona por cuánto tiempo deseas silenciar las notificaciones de este tiquete.
                </p>

                <div class="d-grid gap-2">
                    <button class="btn btn-outline-primary silence-option" type="button" data-hours="1" data-ticket="@ticketId">
                        1 hora
                    </button>
                    <button class="btn btn-outline-primary silence-option" type="button" data-hours="8" data-ticket="@ticketId">
                        8 horas
                    </button>
                    <button class="btn btn-outline-primary silence-option" type="button" data-hours="24" data-ticket="@ticketId">
                        24 horas
                    </button>
                </div>
            </div>

            <div class="modal-footer">
                <button class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
            </div>
        </div>
    </div>
</div>
