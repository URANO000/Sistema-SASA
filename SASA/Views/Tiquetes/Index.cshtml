@{
    ViewData["Title"] = "Tiquetes";
}

<div class="sasa-card">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="mb-0">Gestión de Tiquetes</h2>
        <a asp-controller="Tiquetes" asp-action="Crear" class="btn btn-light">
            <i class="bi bi-plus-lg me-1"></i> Nuevo
        </a>
    </div>

    <div class="sasa-filters row g-2 mb-3">
        <div class="col-md-4">
            <input class="form-control" placeholder="Buscar...">
        </div>
        <div class="col-md-3">
            <select class="form-select">
                <option>Estado</option>
                <option>Abierto</option>
                <option>Cerrado</option>
            </select>
        </div>
        <div class="col-md-3">
            <select class="form-select">
                <option>Prioridad</option>
                <option>Alta</option>
                <option>Media</option>
                <option>Baja</option>
            </select>
        </div>
    </div>

    <table class="table sasa-table">
        <thead>
            <tr>
                <th>#</th>
                <th>Título</th>
                <th>Estado</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>001</td>
                <td>Solicitud de soporte</td>
                <td><span class="badge bg-success">Abierto</span></td>
                <td class="sasa-actions">
                    <a asp-controller="Tiquetes" asp-action="Detalle" asp-route-id="105"><i class="bi bi-eye"></i></a>
                    <i class="bi bi-pencil-square"></i>
                    <i class="bi bi-trash danger" data-bs-toggle="modal" data-bs-target="#deleteModal"></i>
                </td>
            </tr>
        </tbody>
    </table>
</div>

<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title text-black">Confirmar acción</h5>
                <button class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body text-black">
                Esta acción eliminará el registro de forma permanente.
            </div>
            <div class="modal-footer">
                <button class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                <button class="btn btn-danger">Confirmar</button>
            </div>
        </div>
    </div>
</div>
