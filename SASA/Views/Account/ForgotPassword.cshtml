@model SASA.ViewModels.Auth.ForgotPasswordViewModel
@{
    Layout = "_AuthLayout";
    ViewData["Title"] = "Recuperar contraseña";
}

<div class="card shadow-sm">
    <div class="card-body p-4">
        <h1 class="h4 mb-3">Recuperar contraseña</h1>

        <form method="post" action="/forgot-password">
            @Html.AntiForgeryToken()

            <div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>

            <div class="mb-3">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" class="form-control" autocomplete="email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-sasa-primary w-100">Enviar enlace</button>

        </form>

        <div class="mt-3">
            <a href="/login">Volver</a>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
